<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_style"></style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/default_button_background_selector</item>
        <item name="android:textColor">@color/default_button_text_selector</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

</resources>