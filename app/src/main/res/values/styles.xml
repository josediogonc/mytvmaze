<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TitleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">100</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TitleStyle.H1" parent="TitleStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TitleStyle.H2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="LongTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>

    <style name="GenreStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="PropertyStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLength">100</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="LabelStyle" parent="TitleStyle.H2">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_marginEnd">@dimen/small_spacing</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/color_secundary</item>
    </style>


    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/default_button_background_selector</item>
        <item name="android:textColor">@color/default_button_text_selector</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CustomDialogStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

</resources>