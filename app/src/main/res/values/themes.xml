<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyTVMaze" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/blue_chill</item>
        <item name="colorPrimaryDark">@color/tiber</item>
        <item name="colorSecondary">@color/dim_gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/tiber</item>
        <item name="android:windowBackground">@color/tiber</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_offscreen_to_screen</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_screen_to_left_offscreen</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_from_left_offscreen_to_screen</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_screen_to_right_offscreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="show_list_title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLength">100</item>
        <item name="android:textColor">@color/tiber</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_style" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>