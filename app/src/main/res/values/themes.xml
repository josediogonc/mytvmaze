<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyTVMaze" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/blue_chill</item>
        <item name="colorPrimaryDark">@color/tiber</item>
        <item name="colorSecondary">@color/dim_gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/color_primary_dark</item>
        <item name="android:windowBackground">@color/very_light_gray</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_offscreen_to_screen</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_screen_to_left_offscreen</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_from_left_offscreen_to_screen</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_screen_to_right_offscreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">100</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TitleStyle.H1" parent="TitleStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="long_text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>

    <style name="label_style" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/very_light_gray</item>
        <item name="colorControlActivated">@color/ochre_yellow</item>
    </style>

    <style name="properties_style" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLength">100</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="label_style_detail" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="label_style_detail_smaller" parent="label_style_detail">
        <item name="android:layout_marginEnd">@dimen/small_spacing</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/color_accent</item>

    </style>
</resources>