<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyTVMaze" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/blue_chill</item>
        <item name="colorPrimaryDark">@color/tiber</item>
        <item name="colorSecondary">@color/dim_gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/color_primary_dark</item>
        <item name="android:windowBackground">@color/very_light_gray</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MyTVMaze">
        <item name="android:windowBackground">@drawable/splash_screen_layer_list_</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/very_light_gray</item>
        <item name="colorControlActivated">@color/ochre_yellow</item>
    </style>

</resources>